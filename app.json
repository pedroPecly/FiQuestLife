{
  "expo": {
    "name": "FiQuestLife",
    "slug": "FiQuestLife",
    "platforms": ["ios", "android"],
    "version": "0.11.1",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "fiquestlife",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fiquestlife.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMotionUsageDescription": "FiQuestLife precisa acessar o sensor de movimento para contar seus passos e rastrear suas atividades físicas.",
        "NSLocationWhenInUseUsageDescription": "FiQuestLife precisa da sua localização para rastrear a distância percorrida durante atividades físicas como corrida e caminhada.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "FiQuestLife precisa da sua localização para rastrear atividades físicas mesmo em segundo plano, permitindo que você complete desafios automaticamente."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/logo.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.fiquestlife.app",
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "POST_NOTIFICATIONS",
        "WAKE_LOCK",
        "ACTIVITY_RECOGNITION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "FOREGROUND_SERVICE"
      ],
      "useNextNotificationsApi": true
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "FiQuestLife precisa da sua localização para rastrear atividades físicas como corrida e caminhada.",
          "locationWhenInUsePermission": "FiQuestLife precisa da sua localização para rastrear a distância percorrida durante atividades físicas.",
          "locationAlwaysPermission": "FiQuestLife precisa da sua localização para rastrear atividades físicas mesmo em segundo plano, permitindo que você complete desafios automaticamente.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/logo.png",
          "color": "#20B2AA",
          "mode": "production",
          "android": {
            "icon": "./assets/images/logo.png",
            "color": "#20B2AA",
            "sound": "default",
            "priority": "max",
            "vibrationPattern": [0, 250, 250, 250]
          },
          "ios": {
            "sound": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3d9c9e4f-42ba-4ac8-b313-1fef0567b711"
      }
    }
  }
}
